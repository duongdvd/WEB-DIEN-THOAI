                                            <td>@Model.Ram</td>

                                        </tr>

                                        <tr>
                                            <td>Rom</td>
                                            <td>@Model.ROM</td>

                                        </tr>

                                        <tr>
                                            <td>Hệ điều hành</td>
                                            <td>@Model.HeDieuHanh</td>

                                        </tr>

                                        <tr>
                                            <td>Pin</td>
                                            <td>@Model.Pin</td>

                                        </tr>

                                        <tr>
                                            <td>Dung lượng pin</td>
                                            <td>@Model.DungluongPin</td>

                                        </tr>

                                        <tr>
                                            <td>Sim</td>
                                            <td>@Model.Sim</td>

                                        </tr>

                                        <tr>
                                            <td>Wifi</td>
                                            <td>@Model.wifi</td>

                                        </tr>

                                        <tr>
                                            <td>Bluetooth</td>
                                            <td>@Model.Bluetooth </td>

                                        </tr>

                                        <tr>
                                            <td>GPS</td>
                                            <td>@Model.GPS</td>

                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="box" id="product">
                <div class="box-body">
                    <div class="highlights">
                        <h4 class="product-small-title">Chi tiết sản phẩm</h4>
                        <div class="row">
                            <div class="col-lg-12 col-md-4 col-sm-4 col-xs-12">
                                @Html.Raw(Model.NoiDung)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
