                                            <td>Màn hình</td>
                                            <td>@Model.ManHinh</td>

                                        </tr>
                                        <tr>
                                            <td>Camera trước</td>
                                            <td>@Model.CamTruoc</td>

                                        </tr>
                                        <tr>
                                            <td>Camera sau</td>
                                            <td>@Model.CamSau</td>

                                        </tr>

