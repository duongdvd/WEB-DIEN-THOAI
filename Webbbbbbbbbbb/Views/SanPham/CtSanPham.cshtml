                                <li>
                                    <a href="@Model.image">
                                        <div class=" thumb-img"><img src="@Model.image" alt=""></div>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Model.image">
                                        <div class=" thumb-img"><img src="@Model.image" alt=""></div>
                                    </a>
                                </li>
