<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="box">
                <div class="box-head">
                    <h3 class="head-title">Sản phẩm liên quan</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="product-carousel">
        <div class="box-body">
            <div class="row">
                <div class="owl-carousel owl-two owl-theme">
                    @foreach (var item in SpLienquan)
                    {
                        <div class="item">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <a href="/SanPham/CtSanPham/@item.ID">

                                    <div class="product-block">
                                        <div class="product-img"><img src="@item.image" alt=""></div>
                                        <div class="product-content">
                                            <h5><a href="#" class="product-title">@item.TenSanPham</a></h5>
                                            <div class="product-meta">
                                                @if (item.GiaKhuyenMai == 0)
                                                {
                                                    <a href="#" class="product-price">@(item.Gia.HasValue ? item.Gia.Value.ToString("N0") : "Liên hệ") đ</a>
                                                }
                                                else
                                                {
                                                    <a href="#" class="product-price">@(item.Gia.HasValue ? item.Gia.Value.ToString("N0") : "") đ</a>
                                                    <a href="#" class="discounted-price"><strike>@(item.Gia.HasValue ? item.Gia.Value.ToString("N0") : "Liên hệ")</strike></a>
                                                }
                                            </div>
                                            <div class="shopping-btn">
                                           
                                                <a href="#" class="product-btn btn-cart"><i class="fa fa-shopping-cart"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <!-- /.product -->
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>