                                <p class="product-price" style="font-size: 38px;">

                                    @if (Model.GiaKhuyenMai == null)
        {
                            <a href="#" class="product-price">@(Model.Gia.HasValue ? Model.Gia.Value.ToString("N0") + "đ" : "Liên hệ") </a>
}
else
{
                            <a href="#" class="product-price">@(Model.GiaKhuyenMai.HasValue ? Model.GiaKhuyenMai.Value.ToString("N0") + "đ" : "") </a>
                            <a href="#" class="discounted-price"><strike>@(Model.Gia.HasValue ? Model.Gia.Value.ToString("N0") + "đ" : "Liên hệ")</strike></a>
}

                                </p>
                                <p>@Model.MoTa</p>
                                <div class="product-quantity">
                                    <h5>Số lượng</h5>
                                    <div class="quantity mb20">
                                        <input type="number" class="input-text qty text" step="1" min="1" max="6" name="quantity" value="1" title="Qty" size="4" pattern="[0-9]*">
                                    </div>
                                </div>
                                <a href="/GioHang/AddGioHang?masp=@Model.ID&sl=1" class="btn btn-default"><i class="fa fa-shopping-cart"></i>&nbsp;Thêm vào giỏ hàng</i></a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="box-head scroll-nav">
                <div class="head-title">
                    <a class="page-scroll active" href="#product">Chi tiết sản phẩm</a>
