@model Model.EF.BaiViet

@{

    ViewBag.Title = "BaiViet";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var bvLienquan = (List<Model.EF.BaiViet>)ViewBag.Bvlienquan;
    var DanhMuc = (List<Model.EF.DanhMucBaiViet>)ViewBag.DanhMuc;
    var BaiVietNew = (List<Model.EF.BaiViet>)ViewBag.BaiVietNew;
}


<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                <div class="page-breadcrumb">
                    <ol class="breadcrumb">
                        <li><a href="#">Home</a></li>
                        <li>Blog Single</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    </div>
    <!-- /.page-header-->
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <div class="row">
                        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                            <div class="post-block ">
                                <!-- post block -->
                                <div class="post-content">
                                    <h2 class="post-title">@Model.TenBaiViet</h2>
                                    <div class="meta">
                                        <span class="meta-date">@Model.NgayTao</span>
                                        <span>| &nbsp; &nbsp;</span>
                                        <span class="meta-admin">By <a href="#" class="meta-title">@Model.NguoiTao</a></span>
                                        <span>|&nbsp; &nbsp;</span>

                                    </div>
                                    <div class="post-img">
                                        <img src="@Model.image" alt="" class="img-responsive">
                                    </div>

                                    @Html.Raw(Model.NoiDung)

                                </div>
                            </div>
                            <div class="related-post">
                                <div class="row">
                                    <div class="col-lg-12 col-sm-12 col-md-12 col-sm-12">
                                        <div class="related-head">
                                            <h3 class="related-post-title mb30">Tin tức liên quan</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="related-post-block">
                                    <div class="row">
                                        @foreach (var item in bvLienquan)
                                        {
                                            <div class="col-lg-4 col-sm-4 col-md-4 col-xs-12">
                                                <div class="related-post-content">
                                                    <!-- related post -->
                                                    <div class="related-img">
                                                        <a href="#" class="imghover"><img src="@item.image" alt="" class="img-responsive"></a>
                                                    </div>
                                                    <h4 class="related-title"><a href="#" class="title">@item.TenBaiViet</a></h4>
                                                    <div class="meta post-meta">in <a href="#" class="">@item.TieuDeBaiViet</a></div>
                                                </div>
                                            </div>
                                        }
                                        <!-- /.related post -->
                                    </div>
                                </div>
                            </div>
                            <!-- /.related post block -->
                            <!-- /. post navigation -->
                            <!-- /.post author -->
                            <!--comments start-->

                        </div>
                        <!--comments close-->
                    </div>

                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <!-- widget-search-start -->
                    <div class="widget widget-search">
                        <div class="widget-body">
                            <form>
                                <div class="search-form">
                                    <input type="text" class="form-control" placeholder="Search Here">
                                    <button type="Submit"><i class="fa fa-search"></i></button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- widget-search-close -->
                    <!-- widget-categories-start -->
                    <div class=" widget widget-categories">
                        <div class="widget-head">
                            <h2 class="widget-title">Danh Mục Sản Phẩm</h2>
                        </div>
                        <div class="widget-body">
                            <ul class="arrow">
                                @foreach (var item in DanhMuc)
                                {
                                    <li class="active"><a href="#"> @item.TenDanhMuc </a></li>
                                }


                            </ul>
                        </div>
                    </div>
                    <!-- widget-categories-close -->
                    <!-- widget-archievs-start -->
                    <!-- widget-archievs-close -->
                    <!-- widget-recent-post-start -->
                    <div class=" widget widget-recent-post">
                        <div class="widget-head">
                            <h2 class="widget-title">Bài Viết Mới </h2>
                        </div>
                        <div class="widget-body">
                            <ul>
                                @foreach (var item in BaiVietNew)
                                {
                                    <li>
                                        <div class="recent-post">
                                            <h5 class="recent-title "><a href="#" class="title">@item.TenBaiViet</a></h5>
                                            <div class="meta">
                                                <span class="meta-date"> @item.NgayTao</span>
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <!-- widget-recent-post-close-->
                    <!-- widget-Tag start -->
                    <!-- widget-Tag close -->
                </div>
            </div>
        </div>
    </div>
