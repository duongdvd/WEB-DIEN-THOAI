@model IEnumerable<Model.ModelView.ThongKeNam>
@{
    ViewBag.Title = "ThongKeNam";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section Tentrang{
    Thống kê doanh thu
}

@section jsFooter{
    <script src="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>

    <script type="text/javascript">
        $('.date-own').datepicker({
            minViewMode: 2,
            format: 'yyyy'
        });
    </script>
}
<div class="panel-body">
    @using (Html.BeginForm("ThongKeNam", "Report", FormMethod.Post))
    {
        <div class="row form-group">
            <div class="col-lg-12">
                <div class='col-sm-4'>
                    <div class="form-group">
                        <input class="date-own form-control" style="width: 300px;" type="text" name="searchString">
                    </div>
                </div>

                <div class="col-md-4">
                    <button type="submit" class="btn btn-success">Thống kê</button>

                </div>
            </div>
        </div>
    }
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Tháng</th>
                    <th>Doanh thu</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Thang</td>
                        <td>@item.DoanhThu.ToString("N0")</td>

                    </tr>
                }

            </tbody>
        </table>

    </div>
    <!-- /.table-responsive -->
</div>